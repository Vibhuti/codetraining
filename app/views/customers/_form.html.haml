= simple_form_for(@customer) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :email
    = f.input :phone
    = f.input :address
    = f.input :interest
    = f.input :profession
    = f.input :company
    = f.input :current

  .form-actions
    = f.button :submit, 'Save', :class=> "button"
