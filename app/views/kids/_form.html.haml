  = f.input :age
  = f.input :motherFirstName, label: "Mother's First Name"
  = f.input :motherLastName, label: "Mother's Last Name"
  = f.input :fatherFirstName, label: "Father's First Name"
  = f.input :fatherLastName, label: "Father's Last Name"
  = f.input :specificFood, label: 'Food likes'
  = f.input :likings, label: 'Game likes'
  = f.input :allergies, label: 'Allergies'
  = f.input :words, label: 'Words/ sentences can speak'
  = f.input :other, label: 'Other details'
  = f.submit class: 'button'